{
  "scripts": {
    "clean": "rimraf dist/*",
    "copy": "cpx public/**/* dist",
    "watch": "cpx public/**/* dist -w & webpack -w",
    "server": "browser-sync start -c 'bs-config.js'",
    "start": "npm run clean && npm run copy && npm run server & npm run watch",
    "build": "npm run clean && npm run copy && NODE_ENV=production webpack",
    "lint:script": "eslint 'src/**/*.{js,vue}' --ignore-pattern 'src/**/library'",
    "lint:style": "stylelint 'src/**/*.{css,vue}'",
    "lint": "npm run lint:script && npm run lint:style"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "browser-sync": "^2.18.13",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "cssnano-preset-default": "^4.0.0-rc.2",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^2.1.0",
    "file-loader": "^0.11.2",
    "path": "^0.12.7",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "rimraf": "^2.6.1",
    "stylelint": "^8.0.0",
    "stylelint-config-css-modules": "^1.1.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-processor-html": "^1.0.0",
    "svg-sprite-loader": "^3.1.6",
    "url-loader": "^0.5.9",
    "vue-loader": "^13.0.4",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.4",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "es6-promise": "^4.1.1",
    "imagesloaded": "^4.1.3",
    "jquery": "^3.2.1",
    "moment": "^2.18.1",
    "reset-css": "^2.2.1",
    "ua-parser-js": "^0.7.14",
    "vue": "^2.4.2",
    "vue-router": "^2.7.0",
    "vuex": "^2.3.1",
    "webfontloader": "^1.6.28"
  }
